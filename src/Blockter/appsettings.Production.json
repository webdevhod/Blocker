{
  "Serilog": {
    "MinimumLevel": "Information",
    "SyslogUrl": "localhost",
    "SyslogPort": "6514",
    "SyslogAppName": "Blockter",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u4} {ProcessId} --- [{ThreadId,3}] {LoggerName,-40} : {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "app.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u4} {ProcessId} --- [{ThreadId,3}] {LoggerName,-40} : {Message:lj}{NewLine}{Exception}",
          "fileSizeLimitBytes": 10240,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90
        }
      }
    ]
  },
  "ConnectionStrings": {
    "AppDbContext": "Server=localhost;Database=Blockter;Port=5432;User Id=postgres;Password=root;Integrated Security=true;Pooling=true;"
  },
  "Security": {
    "EnforceHttps": true
  }
}
